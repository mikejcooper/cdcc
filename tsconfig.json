{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": false,
    "lib": ["es2015", "es2016", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "*": ["types/*"],
      "src/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
